<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Animate"
             x:Class="Animate.MainPage">

    <StackLayout>
        <Label Text="Animation" HorizontalOptions="Center"/>
        <Button Text="Move Right" Clicked="move"/>
        <Button Text="Move across and expand" Clicked="down"/>
        
        <Image x:Name="mans"
                Source="mans.png"
               WidthRequest="50"
               HeightRequest="50"
               HorizontalOptions="Start"/>
    </StackLayout>

</ContentPage>
