<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Task2sp"
             x:Class="Task2sp.MainPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" Margin="50" >
                <Label Text="Online food stall"  FontSize="Large" HorizontalTextAlignment="Center">
                </Label>
                
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="choose your food items:" FontSize="Medium">

                </Label>
               </StackLayout>
            <StackLayout Orientation="Horizontal" >
                <Label Text="Drinks:   " FontSize="Medium">

                </Label>
                <Button Text="choose drinks"
                        Clicked="Button_Clicked"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Main dish:" FontSize="Medium">

                </Label>
                <Button Text="choose items" 
                        Clicked="Button_Clicked_1"/>
            </StackLayout>
            <Button Text="Save" Margin="30" HorizontalOptions="Center"
                           Clicked="Button_Clicked_2" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>